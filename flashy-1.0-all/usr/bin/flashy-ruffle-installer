#!/bin/bash

curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh || (yad --window-icon=/usr/share/flashy/icon.png --window-icon=emblem-important --title="ERROR" --text="Failed to download Rust. Please double-check your internet connection and try again later. If the problem persists, please post an issue in the Flash GitHub repo. The program will now exit." --button="Dismiss"\!gtk-quit && exit 1)

source "$HOME/.cargo/env"

sudo apt update

sudo apt install -y default-jre default-jdk git libasound2-dev libxcb-shape0-dev libxcb-xfixes0-dev libgtk-3-dev libssl-dev libxcb-xinput-dev libxcb-xkb-dev libxcb-cursor-dev default-jre-headless cmake g++ git || (yad --window-icon=/usr/share/flashy/icon.png --window-icon=emblem-important --title="ERROR" --text="An error occured when attempting to install the necessary components. Please double-check your internet connection and try again later. The program will now exit." --button="Dismiss"\!gtk-quit && exit 1)

rm -r ~/.local/share/flashy/ruffle

mkdir -p ~/.local/share/flashy

cd ~/.local/share/flashy

git clone https://github.com/ruffle-rs/ruffle.git || (yad --window-icon=/usr/share/flashy/icon.png --window-icon=emblem-important --title="ERROR" --text="Failed to download Ruffle from GitHub. Please double-check your internet connection and try again later. If the problem persits, please post an issue in the Flashy GitHub repo. The program will now exit." --button="Dismiss"\!gtk-quit && exit 1)

cd ~/.local/share/flashy/ruffle

chmod -R a+w ~/.local/share/flashy/ruffle

cargo run --release --package=ruffle_desktop
